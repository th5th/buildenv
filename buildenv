BUILDENV="buildenv 0.1 (c) 2013 Ed Willson <ed.willson24@gmail.com>"

E_SUCCESS=0
E_MINOR=1
E_MAJOR=2

TEMPLATEPATH="/usr/local/etc/buildenv"

# unpack the package in directory for type $1 into directory $2.
function unpack()
{
    tar --keep-newer-files -xzf "$TEMPLATEPATH"/"$1".tar.gz -C $2
    pushd $2
    ./mkbuildenv.sh
    rm mkbuildenv.sh
    popd
}

# pack the source under directory $1 into a tarball for type $2.
function pack()
{
    # Create a tarball for the whole directory.
    TARBALL="$TEMPLATEPATH"/"$2".tar.gz
    tar -czf $TARBALL -C $1 `ls -A $1`
    if [ ! -e $TARBALL ]; then
        echo "Error: Could not create tarball."
        exit $E_MINOR
    fi
}

case "$1" in
    list)
        if [ -e $TEMPLATEPATH ]; then
            if [ -z "`ls $TEMPLATEPATH`" ]; then
                echo "No available packages in $TEMPLATEPATH"
            else
                echo "Available packages in $TEMPLATEPATH:"
                for PKG in `ls $TEMPLATEPATH | grep .*\.tar\.gz | sed -e 's/.tar.gz//'`; do
                    echo "  $PKG"
                done
            fi
            exit $E_SUCCESS
        else
            echo "Error: $TEMPLATEPATH not found"
            exit $E_MAJOR
        fi
        ;;
    new)
        if [ ! -e $TEMPLATEPATH/"$2".tar.gz ]; then
            echo "Error: Supplied enironment type ("$2") does not exist in $TEMPLATEPATH"
            exit $E_MINOR
        fi

        if [ ! -z "$3" ]; then
            TARGETPATH="$3"
            if [ ! -d "$3" ]; then mkdir -p $TARGETPATH; fi
        else
            TARGETPATH=`pwd`
        fi

        unpack $2 $TARGETPATH
        exit $E_SUCCESS
        ;;
    package)
        # Command to create a new build environment type from the current working dir.
        if [ -z "$2" ]; then
            echo "Error: Must provide type name to package command."
            exit $E_MAJOR
        fi

        if [ ! -z "$3" ]; then
            SOURCEPATH="$3"
        else
            SOURCEPATH=`pwd`
        fi

        # Checks for existence of mkbuildenv.sh.
        if [ -d "$SOURCEPATH" ] && [ -e "$SOURCEPATH"/mkbuildenv.sh ]; then
            pack "$SOURCEPATH" "$2"
        else
            echo "Error: Specified source path does not exist or does not contain a mkbuildenv.sh file."
            exit $E_MAJOR
        fi

        exit $E_SUCCESS
        ;;
    *)
        echo "${BUILDENV}"
        echo "Usage: ${0##*/} new <type> [path]"
        echo "                package <type> [path]"
        echo "                list"
        exit $E_MAJOR
        ;;
esac
