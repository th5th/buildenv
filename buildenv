E_SUCCESS=0
E_BADTYPE=1
E_BADPARAM=2

TEMPLATEPATH="/usr/local/etc/buildenv"

# unpack the binary under directory $1 into directory $2.
function unpack()
{
    cp $1/buildenv.tar.gz $2
    pushd $2
    tar --keep-newer-files -xzf buildenv.tar.gz
    . mkbuildenv.sh
    rm mkbuildenv.sh buildenv.tar.gz
    popd
}

# pack the source under directory $1 into a tarball in directory $2.
function pack()
{
        # Create a tarball for the whole directory.
        mkdir -p $2
        pushd $1
        if [ -e buildenv.tar.gz ]; then rm buildenv.tar.gz; fi
        tar -czf buildenv.tar.gz `ls -A`
        # Move tarball to $2.
        mv -u --target-directory=$2 buildenv.tar.gz 
        popd
}

case "$1" in
    new)
        if [ ! -d $TEMPLATEPATH/"$2" ]; then
            echo "Error: Supplied enironment type ("$2") does not exist in $TEMPLATEPATH"
            exit $E_BADTYPE
        else
            TYPEPATH=$TEMPLATEPATH/"$2"
        fi

        if [ ! -z "$3" ]; then
            TARGETPATH="$3"
            if [ ! -d "$3" ]; then mkdir -p $TARGETPATH; fi
        else
            TARGETPATH=`pwd`
        fi

        # If there isn't an available tarball, make one!
        if [ ! -e $TYPEPATH/buildenv.tar.gz ]; then pack $TYPEPATH $TYPEPATH; fi

        unpack $TYPEPATH $TARGETPATH
        exit $E_SUCCESS
        ;;
    package)
        # Command to create a new build environment type from the current working dir.
        if [ -z "$2" ]; then
            echo "Error: Must provide type name to package command."
            exit $E_BADPARAM
        else
            TYPEPATH=$TEMPLATEPATH/"$2"
        fi

        if [ ! -z "$3" ]; then
            SOURCEPATH="$3"
        else
            SOURCEPATH=$TYPEPATH
        fi

        # -> Checks for existence of mkbuildenv.sh.
        if [ -d "$SOURCEPATH" ] && [ -e "$SOURCEPATH"/mkbuildenv.sh ]; then
            pack $SOURCEPATH $TYPEPATH
        else
            echo "Error: Specified source path does not exist or does not contain a mkbuildenv.sh file."
            exit $E_BADPARAM
        fi
        ;;
    *)
        echo "Usage: ${0##*/} new TYPE [TARGET]"
        echo "                package TYPE [SOURCE]"
        exit $E_BADPARAM
        ;;
esac
